<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="history1" class="org.moja.spring.core.pojo.History">
        <property name="id" value="1"/>
        <property name="name" value="this is history1!!!"/>
    </bean>

    <bean id="history2" class="org.moja.spring.core.pojo.History">
        <property name="id" value="2"/>
        <property name="name" value="this is history2!!!"/>
    </bean>

    <bean class="org.moja.spring.core.event.ContextStartedEventHandler"/>
    <bean class="org.moja.spring.core.event.ContextClosedEventHandler"/>
    <bean class="org.moja.spring.core.event.ContextRefreshedEventHandler"/>
    <bean class="org.moja.spring.core.event.ContextStoppedEventHandler"/>
</beans>